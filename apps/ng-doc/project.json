{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"sourceRoot": "apps/ng-doc/src",
	"prefix": "ng-doc",
	"targets": {
		"build": {
			"executor": "./dist/libs/builder:browser",
			"outputs": ["{options.outputPath}"],
			"options": {
				"ngDoc": {
					"pages": "apps/ng-doc/src/app",
					"tag": "production",
					"repoConfig": {
						"url": "https://github.com/skoropadas/ng-doc",
						"mainBranch": "main",
						"releaseBranch": "release"
					},
					"keywords": {
						"nunjucks": {
							"path": "https://mozilla.github.io/nunjucks/"
						},
						"tsdoc": {
							"title": "TsDoc",
							"path": "https://tsdoc.org/"
						},
						"highlightjs": {
							"title": "highlight.js",
							"path": "https://highlightjs.org/"
						},
						"ngDocFeatureRequest": {
							"title": "NgDoc Feature Request",
							"path": "https://github.com/skoropadas/ng-doc/issues/new?assignees=skoropadas&labels=Type%3A+Enhancement&template=feature_request.yaml&title=%5BFeature%5D+"
						}
					}
				},
				"outputPath": "dist/apps/ng-doc",
				"index": "apps/ng-doc/src/index.html",
				"main": "apps/ng-doc/src/main.ts",
				"polyfills": "apps/ng-doc/src/polyfills.ts",
				"tsConfig": "apps/ng-doc/tsconfig.build.json",
				"inlineStyleLanguage": "scss",
				"assets": [
					"apps/ng-doc/src/assets",
					{
						"glob": "**/*",
						"input": "dist/libs/app/assets",
						"output": "assets/ng-doc/app"
					},
					{
						"glob": "**/*",
						"input": "dist/libs/ui-kit/assets",
						"output": "assets/ng-doc/ui-kit"
					},
					{
						"glob": "**/*",
						"input": ".ng-doc/ng-doc/assets",
						"output": "assets/ng-doc"
					}
				],
				"styles": ["apps/ng-doc/src/styles.scss"],
				"scripts": [],
				"allowedCommonJsDependencies": ["@ng-doc/core", "posthtml-parser", "posthtml-render", "js-beautify"]
			},
			"configurations": {
				"production": {
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "500kb",
							"maximumError": "10mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "8kb",
							"maximumError": "10kb"
						}
					],
					"fileReplacements": [
						{
							"replace": "apps/ng-doc/src/environments/environment.ts",
							"with": "apps/ng-doc/src/environments/environment.prod.ts"
						}
					],
					"outputHashing": "all",
					"sourceMap": true
				},
				"development": {
					"buildOptimizer": false,
					"optimization": false,
					"vendorChunk": true,
					"extractLicenses": false,
					"sourceMap": true,
					"namedChunks": true
				}
			},
			"defaultConfiguration": "production",
			"dependsOn": [
				{
					"projects": "self",
					"target": "link-core"
				}
			]
		},
		"link-core": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"symlink-dir dist/libs/core dist/libs/builder/node_modules/@ng-doc/core",
					"symlink-dir dist/libs/builder node_modules/@ng-doc/builder"
				]
			},
			"dependsOn": [
				{
					"projects": "dependencies",
					"target": "build"
				}
			]
		},
		"serve": {
			"executor": "./dist/libs/builder:dev-server",
			"options": {
				"tsConfig": "apps/ng-doc/tsconfig.app.json"
			},
			"configurations": {
				"production": {
					"browserTarget": "ng-doc:build:production",
					"ngDoc": {
						"pages": "apps/ng-doc/src/app",
						"tag": "production",
						"repoConfig": {
							"url": "https://github.com/skoropadas/ng-doc",
							"mainBranch": "main",
							"releaseBranch": "release"
						},
						"keywords": {
							"nunjucks": {
								"path": "https://mozilla.github.io/nunjucks/"
							},
							"tsdoc": {
								"title": "TsDoc",
								"path": "https://tsdoc.org/"
							},
							"highlightjs": {
								"title": "highlight.js",
								"path": "https://highlightjs.org/"
							},
							"ngDocFeatureRequest": {
								"title": "NgDoc Feature Request",
								"path": "https://github.com/skoropadas/ng-doc/issues/new?assignees=skoropadas&labels=Type%3A+Enhancement&template=feature_request.yaml&title=%5BFeature%5D+"
							}
						}
					}
				},
				"development": {
					"browserTarget": "ng-doc:build:development",
					"ngDoc": {
						"pages": "apps/ng-doc/src/app",
						"tag": "development",
						"repoConfig": {
							"url": "https://github.com/skoropadas/ng-doc",
							"mainBranch": "main",
							"releaseBranch": "release"
						},
						"keywords": {
							"nunjucks": {
								"path": "https://mozilla.github.io/nunjucks/"
							},
							"tsdoc": {
								"title": "TsDoc",
								"path": "https://tsdoc.org/"
							},
							"highlightjs": {
								"title": "highlight.js",
								"path": "https://highlightjs.org/"
							},
							"ngDocFeatureRequest": {
								"title": "NgDoc Feature Request",
								"path": "https://github.com/skoropadas/ng-doc/issues/new?assignees=skoropadas&labels=Type%3A+Enhancement&template=feature_request.yaml&title=%5BFeature%5D+"
							}
						}
					}
				}
			},
			"defaultConfiguration": "development",
			"dependsOn": [
				{
					"projects": "self",
					"target": "link-core"
				}
			]
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"browserTarget": "ng-doc:build"
			}
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"options": {
				"lintFilePatterns": ["apps/ng-doc/**/*.ts", "apps/ng-doc/**/*.html"]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["coverage/apps/ng-doc"],
			"options": {
				"jestConfig": "apps/ng-doc/jest.config.ts",
				"passWithNoTests": true
			}
		}
	},
	"tags": ["type:app", "app:ng-doc"],
	"implicitDependencies": ["builder"]
}
