{
	"name": "ng-doc",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"sourceRoot": "apps/ng-doc/src",
	"prefix": "ng-doc",
	"targets": {
		"build": {
			"executor": "./dist/libs/builder:application",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/apps/ng-doc",
				"index": "apps/ng-doc/src/index.html",
				"browser": "apps/ng-doc/src/main.ts",
				"polyfills": ["zone.js"],
				"inlineStyleLanguage": "scss",
				"server": "apps/ng-doc/src/main.server.ts",
				"prerender": true,
				"ssr": {
					"entry": "apps/ng-doc/server.ts"
				},
				"assets": [
					"apps/ng-doc/src/assets",
					{
						"glob": "**/*",
						"input": "dist/libs/app/assets",
						"output": "assets/ng-doc/app"
					},
					{
						"glob": "**/*",
						"input": "dist/libs/ui-kit/assets",
						"output": "assets/ng-doc/ui-kit"
					},
					{
						"glob": "**/*",
						"input": "ng-doc/ng-doc/assets",
						"output": "assets/ng-doc"
					}
				],
				"styles": ["apps/ng-doc/src/styles.scss"],
				"scripts": [],
				"allowedCommonJsDependencies": [
					"@ng-doc/core",
					"posthtml-parser",
					"posthtml-render",
					"js-beautify",
					"chalk"
				],
				"ngDoc": { "config": "apps/ng-doc/ng-doc.config.ts" }
			},
			"configurations": {
				"production": {
					"tsConfig": "apps/ng-doc/tsconfig.build.json",
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "500kb",
							"maximumError": "10mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "8kb",
							"maximumError": "10kb"
						}
					],
					"fileReplacements": [
						{
							"replace": "apps/ng-doc/src/environments/environment.ts",
							"with": "apps/ng-doc/src/environments/environment.prod.ts"
						}
					],
					"outputHashing": "all",
					"sourceMap": true
				},
				"development": {
					"tsConfig": "apps/ng-doc/tsconfig.app.json",
					"optimization": false,
					"extractLicenses": false,
					"sourceMap": true,
					"namedChunks": true
				}
			},
			"defaultConfiguration": "production",
			"dependsOn": [
				{
					"target": "link-libs"
				}
			]
		},
		"link-libs": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"symlink-dir dist/libs/core dist/libs/builder/node_modules/@ng-doc/core",
					"symlink-dir dist/libs/core dist/libs/utils/node_modules/@ng-doc/core",
					"symlink-dir dist/libs/utils dist/libs/builder/node_modules/@ng-doc/utils",
					"symlink-dir dist/libs/keywords-loaders node_modules/@ng-doc/keywords-loaders",
					"symlink-dir dist/libs/builder node_modules/@ng-doc/builder",
					"symlink-dir dist/libs/app node_modules/@ng-doc/app",
					"symlink-dir dist/libs/ui-kit node_modules/@ng-doc/ui-kit"
				]
			},
			"dependsOn": [
				{
					"projects": "dependencies",
					"target": "build"
				}
			]
		},
		"serve": {
			"executor": "./dist/libs/builder:dev-server",
			"configurations": {
				"production": {
					"buildTarget": "ng-doc:build:production",
					"tsConfig": "apps/ng-doc/tsconfig.build.json"
				},
				"development": {
					"buildTarget": "ng-doc:build:development"
				},
				"poc": {
					"buildTarget": "ng-doc:build:development",
					"ngDoc": {
						"config": "apps/ng-doc/ng-doc.config.poc.ts"
					},
					"optimization": false,
					"extractLicenses": false,
					"sourceMap": true,
					"namedChunks": true
				}
			},
			"defaultConfiguration": "development",
			"dependsOn": [
				{
					"target": "link-libs"
				}
			]
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"buildTarget": "ng-doc:build"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/apps/ng-doc"],
			"options": {
				"jestConfig": "apps/ng-doc/jest.config.ts"
			}
		}
	},
	"tags": ["type:app", "app:ng-doc"],
	"implicitDependencies": ["builder"]
}
